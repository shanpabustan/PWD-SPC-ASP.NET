@model PWD_DSWD_SPC.Models.Registered.UserCredentials
@{
    ViewData["Title"] = "Login";
    var successMessage = TempData["Message"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <!-- CSS -->
    <link href="style.css" rel="stylesheet">
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- FONT -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <!-- CONTAINER -->
    <div class="container d-flex align-items-center min-vh-100">
        <div class="row g-0 justify-content-center">
            <!-- TITLE -->
            <div class="col-lg-4 offset-lg-1 mx-0 px-0">
                <div id="title-container">
                    <a href="@Url.Action("Landing","Landing")" style="border-style: none;">
                        <img src="~/doh.png" class="pwd-image" alt="dswdlogo">
                    </a>
                    <h2>Person with Disability (PWD)</h2>

                    <p><strong>Note:</strong> Enter your PWD Username and Password to access User Dashboard.</strong> </p>
                </div>
            </div>
            <!-- FORMS -->
            <div class="col-lg-7 mx-0 px-0">
                <div id="qbox-container">
                    <div class="justify-content-center align-items-center m-5">
                        <h2 class="text-center mt-5">Welcome </h2>
                        <!-- Start of the form -->
                        <form asp-controller="Landing" asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Username">Username</label>
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <p class="text-center" style="color: #0e2b95; cursor: pointer;" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">
                                    Forgot password?
                                </p>
                                <button type="submit" class="btn btn-primary form-control" style="background: rgb(14, 43, 149);">Login</button>
                            </div>
                        </form>
                        <p class="text-center mt-3 mb-0">Don't have an account? <a href="@Url.Action("Add", "Register")" style="color: #0e2b95;">Register Here!</a></p>
                    </div>
                </div>
            </div>

            <!-- Forgot Password Modal -->
            <div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="forgotPasswordModalLabel">Forgot Password</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form asp-action="ForgotPassword" asp-controller="Landing" method="post">
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="username">Enter your PWD Username</label>
                                    <input type="text" class="form-control" name="username" required />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JavaScript CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-BugOe/zNNB13M5f2yIrLBivUhvEjJFTQ7DRbA2oUG+ITwX4jA+9FhoB3D9m9tGTB" crossorigin="anonymous"></script>

    <!-- SweetAlert2 Script -->
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Password Reset',
                text: '@successMessage',
                confirmButtonText: 'OK'
            });
        </script>
    }
</body>
</html>
