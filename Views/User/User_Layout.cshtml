<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- FullCalendar CSS  -->
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css' rel='stylesheet' />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- custom styles -->
    <link rel="stylesheet" href="~/User-Assets/user.css">

</head>
<body>
    <!-- =============== Navigation ================ -->
    <div class="custom-container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="@Url.Action("UserDash", "User")">
                        <img src="~/User-Assets/doh.png" class="icon" />
                        <span class="title">User Dashboard</span>
                    </a>
                </li>

                @* Dashboard *@
                <li>
                    <a href="@Url.Action("UserDash", "User")">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>

                @* Profile *@
                <li>
                    <a href="@Url.Action("UserProfile", "User")">
                        <span class="icon">
                            <ion-icon name="person-outline"></ion-icon>
                        </span>
                        <span class="title">Profile</span>
                    </a>
                </li>

                @* Accredited Establishment *@
                <li>
                    <a href="@Url.Action("AccreditedEstab", "User")">
                        <span class="icon">
                            <ion-icon name="business-outline"></ion-icon>
                        </span>
                        <span class="title">Accredited Establishment</span>
                    </a>
                </li>

                @* QR Scanner *@
                <li>
                    <a href="@Url.Action("QrScan", "User")">
                        <span class="icon">
                            <ion-icon name="qr-code-outline"></ion-icon>
                        </span>
                        <span class="title">QR Scanner</span>
                    </a>
                </li>

                @* History *@
                <li>
                    <a href="@Url.Action("History", "User")">
                        <span class="icon">
                            <ion-icon name="time-outline"></ion-icon>
                        </span>
                        <span class="title">History</span>
                    </a>
                </li>

                @* Report *@
                <li>
                    <a href="@Url.Action("Report", "User")">
                        <span class="icon">
                            <ion-icon name="paper-plane-outline"></ion-icon>
                        </span>
                        <span class="title">Report</span>
                    </a>
                </li>

                @* Account Setting *@
                <li>
                    <a href="@Url.Action("AccountSetting", "User")">
                        <span class="icon">
                            <ion-icon name="settings-outline"></ion-icon>
                        </span>
                        <span class="title">Account Setting</span>
                    </a>
                </li>

                @* Log-out *@
                <li>
                    <a href="#" data-bs-toggle="modal" data-bs-target="#signOutModal">
                        <span class="icon">
                            <ion-icon name="log-out-outline"></ion-icon>
                        </span>
                        <span class="title">Sign Out</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!--Sign-out Modal-->
    <div class="modal fade" id="signOutModal" tabindex="-1" aria-labelledby="signOutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-white" style="background-color:#0B2271">
                    <h5 class="modal-title" id="signOutModalLabel">Confirm Sign Out</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to sign out?
                </div>
                <div class="modal-footer justify-content-center">
                    <form action="@Url.Action("Logout", "User")" method="post">
                        <button type="submit" class="btn btn-light text-white" style=" background-color:#0B2271">Sign Out</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div>
        <!-- Render the body of the page -->
        @RenderBody()

        <!-- Render the Scripts section if defined -->
        @RenderSection("Scripts", required: false)
    </div>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- FullCalendar JS -->
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js'></script>

    <!-- custom JS -->
    <script src="~/User-Assets/main.js"></script>

    <!-- Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>

